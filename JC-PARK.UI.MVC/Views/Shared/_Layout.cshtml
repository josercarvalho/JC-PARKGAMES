<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ultra Games Park</title>

    <!-- Le styles -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link href="~/Content/bootstrap-Flatly.min.css" rel="stylesheet" />*@    
</head>
<body>
    @Html.Partial("_Menu")
    <div class="container body-content" id="body">
        @*@RenderBody()*@
        <section class="content-wrapper main-content clear-fix">@RenderBody()</section>
        <hr />
        @Html.Partial("_Footer")
    </div>
    <!-- Le javascript -->
    <!-- Placed at the end of the document so the pages load faster -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

