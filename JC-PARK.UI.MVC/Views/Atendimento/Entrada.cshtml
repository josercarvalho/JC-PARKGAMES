@model JC_PARK.Domain.Entities.Cliente

@{
    ViewBag.Title = "Entrada de Clientes";
}

<div class=" container-fluid">
    <div class="nav navbar-nav navbar-left">
        <h1>@ViewBag.empresa</h1>
    </div>
    <div class="nav navbar-nav navbar-right">
        <h2>Entrada </h2>
    </div>
</div>

@using (Html.BeginForm("Entrada", "Atendimento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="well bs-component">
        <div class="form-horizontal">
            <fieldset>
                <legend>Entrada de Clientes</legend>
                @*<hr/>*@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="form-group col-lg-4">
                        <div class="col-lg-10">
                            @Html.LabelFor(model => model.NomeCrianca, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.NomeCrianca, new { htmlAttributes = new { @class = "form-control input-lg", autofocus = "autofocus" } })
                            @Html.ValidationMessageFor(model => model.NomeCrianca, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        <div class="col-lg-10">
                            @Html.LabelFor(model => model.NomePai, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.NomePai, new { htmlAttributes = new { @class = "form-control input-lg" } })
                            @Html.ValidationMessageFor(model => model.NomePai, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        <div class="col-lg-10">
                            @Html.LabelFor(model => model.TelefonePai, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.TelefonePai, new { htmlAttributes = new { @class = "form-control input-lg" } })
                            @Html.ValidationMessageFor(model => model.TelefonePai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    @*<div class="form-group col-lg-4">
                        <div class="col-lg-10">
                            @Html.LabelFor(model => model.EtiquetaId, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.EtiquetaId, new { htmlAttributes = new { @class = "form-control input-lg" } })
                            @Html.ValidationMessageFor(model => model.EtiquetaId, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                    <div class="form-group col-lg-4">
                        <div class="col-lg-10">
                            @Html.LabelFor(model => model.DataCadastro, htmlAttributes: new { @class = "control-label" })
                            @Html.Editor("DataCadastro", new { htmlAttributes = new { @class = "form-control input-lg", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.DataCadastro, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*<div class="form-group col-lg-4">
                        <div class="col-lg-10">
                            @Html.LabelFor(model => model.HoraEntrada, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.HoraEntrada, new { htmlAttributes = new { @class = "form-control input-lg", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.HoraEntrada, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                </div>

                <div class="panel-footer">
                    <div class="text-left">
                        <button type="submit" class="btn btn-primary btn-md">Salvar Registros</button>
                        <button id="btn-reset" class="btn btn-warning btn-md">Limpar Registros</button>
                        <a class="btn btn-danger btn-md" href="@Url.Action("Index")">Cancelar</a>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
}

<div id="progress" class="ui-loader" style="top: 270px; left: 553px; display: none;">
    <div class="spin"></div>
    <span>Aguarde ...</span>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/MyJS/Entrada.js"></script>
}