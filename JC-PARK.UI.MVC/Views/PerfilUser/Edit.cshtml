@model JC_PARK.Domain.Entities.PerfilUsuario

@{
    ViewBag.Title = "Editar Perfil de Usuário";
}

@using (Html.BeginForm("Edit", "PerfilUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @*<div class="well bs-component">*@
        <div class="form-horizontal">
            <fieldset>
                <legend>Editar Perfil de Usuário</legend>
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                @Html.HiddenFor(model => model.PerfilUsuarioId)

                <div class="form-group">
                    @Html.LabelFor(model => model.NomPerfil, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NomPerfil, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NomPerfil, "", new { @class = "text-danger" })
                    </div>
                </div>

                @*<div class="form-group">
                        @Html.LabelFor(model => model.DataCadastro, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DataCadastro, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DataCadastro, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                <div class="form-group">
                    @Html.LabelFor(model => model.FlAdminMaster, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.FlAdminMaster)
                            @Html.ValidationMessageFor(model => model.FlAdminMaster, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FlAtivo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.FlAtivo)
                            @Html.ValidationMessageFor(model => model.FlAtivo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary btn-sm">Salvar Registros</button>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Index")">Cancelar</a>
                    </div>
                </div>
            </fieldset>
        </div>
    @*</div>*@
